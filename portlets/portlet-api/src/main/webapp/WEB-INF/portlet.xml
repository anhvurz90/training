<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="1.0">



	<portlet>
		<description xml:lang="EN">Hello world portlet</description>
		<portlet-name>HelloWorld</portlet-name>
		<portlet-class>
			org.exoplatform.training.portlet.basic.HelloWorld
		</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Hello World</title>
		</portlet-info>
	</portlet>
  <portlet>
    <description xml:lang="EN">Hello world JSP portlet</description>
    <portlet-name>HelloWorldJSP</portlet-name>
    <portlet-class>
      org.exoplatform.training.portlet.basic.HelloWorldJSP
    </portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <portlet-info>
      <title>Hello World JSP</title>
    </portlet-info>
  </portlet>

  <portlet>
    <description xml:lang="EN">Portlet preferences demo portlet</description>
    <portlet-name>PrefDemo</portlet-name>
    <portlet-class>
      org.exoplatform.training.portlet.basic.PreferencesDemo
    </portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
      <portlet-mode>edit</portlet-mode>
    </supports>
    <portlet-info>
      <title>Portlet Preferences Demo</title>
    </portlet-info>
    <portlet-preferences>
      <preference>
        <name>background</name>
        <value>white</value>
        <read-only>false</read-only>
      </preference>
    </portlet-preferences>
  </portlet>

  <portlet>
    <description xml:lang="EN">Portlets Taglib demo portlet</description>
    <portlet-name>TaglibDemo</portlet-name>
    <portlet-class>
      org.exoplatform.training.portlet.basic.TaglibDemo
    </portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supports>
      <mime-type>image/jpeg</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>    
    <portlet-info>
      <title>Portlets Taglib Demo</title>
    </portlet-info>
  </portlet>

  <portlet>
    <description xml:lang="EN">Demonstrates portlet request and session attributes</description>
    <portlet-name>AttributesDemo</portlet-name>
    <portlet-class>
      org.exoplatform.training.portlet.basic.AttributesDemo
    </portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
      <portlet-mode>edit</portlet-mode>
    </supports>
    <portlet-info>
      <title>Attributes Demo Portlet</title>
    </portlet-info>
  </portlet>
  
  <portlet>
    <description xml:lang="EN">Displays portlet session attributes set by AttributesDemo</description>
    <portlet-name>AttributesDisplay</portlet-name>
    <portlet-class>
      org.exoplatform.training.portlet.basic.AttributesDisplay
    </portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <portlet-info>
      <title>Attributes Display Portlet</title>
    </portlet-info>
  </portlet>  
  
  <portlet>
    <description xml:lang="EN">JSR 286 Event Producer</description>
    <portlet-name>EventProducer</portlet-name>
    <display-name xml:lang="EN">Event Producer</display-name>
    <portlet-class>org.exoplatform.training.portlet.event.EventProducer</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>EN</supported-locale>
    <portlet-info>
      <title>Event Producer</title>
    </portlet-info>
    <supported-publishing-event><name>SampleEvent</name></supported-publishing-event>
  </portlet>    
  <portlet>
    <description xml:lang="EN">JSR 286 Event Consumer</description>
    <portlet-name>EventConsumer</portlet-name>
    <display-name xml:lang="EN">Event Consumer</display-name>
    <portlet-class>org.exoplatform.training.portlet.event.EventConsumer</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>EN</supported-locale>
    <portlet-info>
      <title>Event Consumer</title>
    </portlet-info>
    <supported-processing-event><name>SampleEvent</name></supported-processing-event>
  </portlet>  

  
  <portlet>
    <description xml:lang="EN">Set Public Parameters</description>
    <portlet-name>SetPublicParams</portlet-name>
    <display-name xml:lang="EN">Set Public Parameters</display-name>
    <portlet-class>org.exoplatform.training.portlet.publicparams.SetPublicParams</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>EN</supported-locale>
    <portlet-info>
      <title>Set Public Params</title>
    </portlet-info>
    <supported-public-render-parameter>country</supported-public-render-parameter>
  </portlet>    
  
  <portlet>
    <description xml:lang="EN">Show United Nations data about a country set as a public render parameter</description>
    <portlet-name>UNDataCountry</portlet-name>
    <display-name xml:lang="EN">UN Data Country</display-name>
    <portlet-class>org.exoplatform.training.portlet.publicparams.UNDataCountry</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>EN</supported-locale>
    <portlet-info>
      <title>UN Data Country</title>
    </portlet-info>
    <supported-public-render-parameter>country</supported-public-render-parameter>
  </portlet>     
  
  <portlet>
    <description xml:lang="EN">Show Wikipedia page for a country set as a public render parameter</description>
    <portlet-name>WikipediaCountry</portlet-name>
    <display-name xml:lang="EN">UN Data Country</display-name>
    <portlet-class>org.exoplatform.training.portlet.publicparams.WikipediaCountry</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>EN</supported-locale>
    <portlet-info>
      <title>Wikipedia Country</title>
    </portlet-info>
    <supported-public-render-parameter>country</supported-public-render-parameter>
  </portlet>    
  
  
  <portlet>
    <description xml:lang="EN">Demonstrates JSR 286 cache features</description>
    <portlet-name>CacheDemo</portlet-name>
    <display-name xml:lang="EN">Cache Demo</display-name>
    <portlet-class>org.exoplatform.training.portlet.cache.CacheDemo</portlet-class>

    <expiration-cache>300</expiration-cache>
    <cache-scope>private</cache-scope>    
  
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
    </supports>
    <supported-locale>EN</supported-locale>
    <portlet-info>
      <title>Cache Demo</title>
    </portlet-info>
  </portlet>     

  <event-definition> 
    <name>SampleEvent</name>
    <value-type>org.exoplatform.training.portlet.event.SampleEvent</value-type>
  </event-definition>
  
  <public-render-parameter>
    <identifier>country</identifier>
    <name>country</name>
  </public-render-parameter>  
  
</portlet-app>
